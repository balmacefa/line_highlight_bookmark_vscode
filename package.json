{
  "version": "1.0.2",
  "name": "linehighlightbookmarkvscode",
  "displayName": "Line Highlight Bookmark",
  "publisher": "balmacefa",
  "repository": "https://github.com/balmacefa/line_highlight_bookmark_vscode",
  "description": "vscode extension | Bookmark with highlight lines, to quickly jump to later (multi-cursor supported)",
  "keywords": [
    "bookmark",
    "bookmarks",
    "mark",
    "jump",
    "navigation",
    "multi-cursor",
    "multi-cursor support"
  ],
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#111",
    "theme": "dark"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lineHighlightBookmark.toogleBookmarks",
        "title": "lineHighlightBookmark: Toogle Bookmarks"
      },
      {
        "command": "lineHighlightBookmark.clearAllBookmarks",
        "title": "lineHighlightBookmark: Clear All Bookmarks"
      },
      {
        "command": "lineHighlightBookmark.navigateToNextBookmark",
        "title": "lineHighlightBookmark: Move cursor to the next bookmark"
      },
      {
        "command": "lineHighlightBookmark.navigateToPrevBookmark",
        "title": "lineHighlightBookmark: Move cursor to the previous bookmark"
      },
      {
        "command": "lineHighlightBookmark.openSettings",
        "title": "lineHighlightBookmark: Open Line Highlight Bookmark Settings"
      }
    ],
    "keybindings": [
      {
        "command": "lineHighlightBookmark.toogleBookmarks",
        "key": "ctrl+b",
        "mac": "cmd+b",
        "when": "editorTextFocus"
      },
      {
        "command": "lineHighlightBookmark.clearAllBookmarks",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      },
      {
        "command": "lineHighlightBookmark.navigateToNextBookmark",
        "key": "f2",
        "mac": "f2",
        "when": "editorTextFocus"
      },
      {
        "command": "lineHighlightBookmark.navigateToPrevBookmark",
        "key": "shift+f2",
        "mac": "shift+f2",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "lineHighlightBookmark configuration",
      "properties": {
        "lineHighlightBookmark.keywords": {
          "type": "string",
          "default": "linedoc,ldoc",
          "description": "lineHighlightBookmark: Keywords to automatically bookmark lines. Separate multiple keywords with commas. Example: 'linedoc,ldoc'. If a line contains any of these keywords, it will be bookmarked."
        },
        "lineHighlightBookmark.deleteLineIfKeywordRemoved": {
          "type": "boolean",
          "default": false,
          "description": "lineHighlightBookmark: remove the bookmark if the keyword is removed from the line."
        },
        "lineHighlightBookmark.alignTopOnNavigation": {
          "type": "boolean",
          "default": false,
          "description": "lineHighlightBookmark: If set bookmarked line will become the topmost when using next / previous navigation commands"
        },
        "lineHighlightBookmark.renderLine": {
          "type": "boolean",
          "default": true,
          "description": "lineHighlightBookmark: If set render a line on the bookmark"
        },
        "lineHighlightBookmark.lineColor": {
          "type": [
            "string"
          ],
          "format": "color",
          "default": "#65EAB9",
          "description": "lineHighlightBookmark: Change the line color. (Ex: 'red', '#FFF' #FFFFFFF, 'RGB(255,255,255)','RGB(255, 255, 255. 0.5) )"
        },
        "lineHighlightBookmark.lineWidth": {
          "type": [
            "string"
          ],
          "description": "lineHighlightBookmark: Change the line width. (Ex: '1px', '2px', '3px')",
          "enum": [
            "1px",
            "2px",
            "3px",
            "4px",
            "8px",
            "10px",
            "12px"
          ],
          "default": "2px"
        },
        "lineHighlightBookmark.lineStyle": {
          "type": [
            "string"
          ],
          "enum": [
            "solid",
            "dashed"
          ],
          "default": "solid"
        },
        "lineHighlightBookmark.cursorPositionOnNavigation": {
          "type": "string",
          "default": "lineStart",
          "enum": [
            "lineStart",
            "lineEnd"
          ],
          "description": "lineHighlightBookmark: Set the cursor position when navigating to a bookmark. 'lineStart' places it at the first non-whitespace character, 'lineEnd' places it at the end of the line."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "update_npm": "npx npm-check-updates"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "mocha-each": "^2.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vscode-test": "^1.6.1",
    "@types/mocha-each": "^2.0.4"
  },
  "dependencies": {}
}